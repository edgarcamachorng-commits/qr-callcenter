    <div class="container">
        <!-- Mismo HTML que tu c√≥digo original -->
    </div>

    <script>
        // ======================
        // CONFIGURACI√ìN SUPABASE
        // ======================
        const SUPABASE_URL = 'https://eayibccyjvpmusarzlgf.supabase.co';
        const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImVheWliY2N5anZwbXVzYXJ6bGdmIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NzA5ODA5OTEsImV4cCI6MjA4NjU1Njk5MX0.TPrFyv7QRJXprmPEK-kwyp0Tcht4S1nDRJr4hZo09Mo
';
        
        // Inicializar Supabase
        const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
        
        const DOMINIOS_PERMITIDOS = ['@mutua.es', '@aurgi.com', '@mutuamadmotor.com'];

        // ======================
        // FUNCI√ìN PRINCIPAL: GENERAR C√ìDIGO
        // ======================
        async function generateCode() {
            const email = document.getElementById('agentEmail').value.trim();
            const nombre = document.getElementById('agentName').value.trim();
            const tipoDoc = document.getElementById('docType').value;
            const hashDoc = document.getElementById('docHash').value.trim();
            
            // Validaciones
            if (!validateEmail() || !nombre) {
                alert('‚ùå Datos inv√°lidos');
                return;
            }
            
            // Mostrar loading
            const btn = document.getElementById('generateBtn');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<span>‚è≥ Generando...</span>';
            btn.disabled = true;
            
            try {
                // Generar c√≥digo √∫nico
                const codigoUnico = generateUniqueCode();
                
                // 1. GUARDAR EN SUPABASE
                const { data, error } = await supabase
                    .from('codigos_qr')
                    .insert([
                        {
                            codigo: codigoUnico,
                            email: email,
                            nombre_agente: nombre,
                            tipo_documento: tipoDoc,
                            hash_documento: hashDoc || null,
                            metadata: {
                                user_agent: navigator.userAgent,
                                timestamp: new Date().toISOString()
                            }
                        }
                    ])
                    .select();
                
                if (error) throw error;
                
                console.log('‚úÖ Guardado en Supabase:', data);
                
                // 2. VERIFICAR QUE SE GUARD√ì
                const { data: verifyData, error: verifyError } = await supabase
                    .from('codigos_qr')
                    .select('*')
                    .eq('codigo', codigoUnico)
                    .single();
                
                if (verifyData) {
                    console.log('‚úÖ Verificado en BD:', verifyData);
                }
                
                // 3. MOSTRAR RESULTADOS
                const urlVerificacion = `${window.location.origin}${window.location.pathname}?verify=${codigoUnico}`;
                mostrarResultado(codigoUnico, urlVerificacion, {
                    email, nombre, tipoDoc, hashDoc
                });
                
                alert('‚úÖ C√≥digo guardado en base de datos');
                
            } catch (error) {
                console.error('Error:', error);
                
                // Fallback a localStorage si Supabase falla
                const codigoUnico = generateUniqueCode();
                const urlVerificacion = `${window.location.origin}${window.location.pathname}?verify=${codigoUnico}`;
                
                mostrarResultado(codigoUnico, urlVerificacion, {
                    email, nombre, tipoDoc, hashDoc
                });
                
                alert('‚ö†Ô∏è Modo offline - datos guardados localmente');
            } finally {
                btn.innerHTML = originalText;
                btn.disabled = false;
            }
        }

        // ======================
        // VERIFICAR C√ìDIGO EN SUPABASE
        // ======================
        async function verifyCode() {
            const codigo = document.getElementById('verifyCode').value.trim().toUpperCase();
            const resultDiv = document.getElementById('verificationResult');
            
            if (!codigo || codigo.length !== 8) {
                showResult('error', '‚ùå C√≥digo inv√°lido');
                return;
            }
            
            resultDiv.innerHTML = '<p>üîç Verificando...</p>';
            
            try {
                // Buscar en Supabase
                const { data, error } = await supabase
                    .from('codigos_qr')
                    .select('*')
                    .eq('codigo', codigo)
                    .single();
                
                if (error) throw error;
                
                if (data) {
                    // Registrar esta verificaci√≥n en la tabla de log
                    await supabase
                        .from('verificaciones_log')
                        .insert([
                            {
                                codigo_id: data.id,
                                ip_address: null, // Podr√≠as obtener la IP
                                user_agent: navigator.userAgent,
                                resultado: true
                            }
                        ]);
                    
                    // Actualizar contador de verificaciones
                    await supabase
                        .from('codigos_qr')
                        .update({ 
                            verificado: true,
                            fecha_verificacion: new Date().toISOString()
                        })
                        .eq('id', data.id);
                    
                    showResult('success', `
                        <h3>‚úÖ C√≥digo V√°lido</h3>
                        <p><strong>Agente:</strong> ${data.nombre_agente} (${data.email})</p>
                        <p><strong>Tipo documento:</strong> ${data.tipo_documento}</p>
                        <p><strong>Fecha creaci√≥n:</strong> ${new Date(data.fecha_creacion).toLocaleString()}</p>
                        <p><strong>Hash documento:</strong> ${data.hash_documento || 'No proporcionado'}</p>
                        <p><strong>Verificaciones:</strong> Primera vez</p>
                    `);
                    
                    // Actualizar localStorage
                    updateLocalVerification(codigo, true);
                    
                } else {
                    // Buscar en localStorage como fallback
                    const localResult = searchInLocalHistory(codigo);
                    if (localResult) {
                        showResult('success', `
                            <h3>‚ö†Ô∏è C√≥digo Local</h3>
                            <p>${localResult.email} - ${localResult.fecha}</p>
                            <p><small>No encontrado en base de datos central</small></p>
                        `);
                    } else {
                        showResult('error', '‚ùå C√≥digo no encontrado');
                    }
                }
                
            } catch (error) {
                console.error('Error verificando:', error);
                showResult('error', '‚ùå Error de conexi√≥n con la base de datos');
            }
        }

        // ======================
        // OBTENER HISTORIAL DESDE SUPABASE
        // ======================
        async function loadHistoryFromSupabase() {
            try {
                const { data, error } = await supabase
                    .from('codigos_qr')
                    .select('*')
                    .order('fecha_creacion', { ascending: false })
                    .limit(20);
                
                if (error) throw error;
                
                displayHistory(data);
                
            } catch (error) {
                console.error('Error cargando historial:', error);
                // Fallback a localStorage
                displayHistoryFromLocal();
            }
        }

        // ======================
        // FUNCIONES AUXILIARES
        // ======================
        function mostrarResultado(codigo, url, datos) {
            document.getElementById('uniqueCode').textContent = codigo;
            document.getElementById('verificationUrl').textContent = url;
            
            // Generar QR
            const qrContainer = document.getElementById('qrCode');
            qrContainer.innerHTML = '';
            new QRCode(qrContainer, {
                text: url,
                width: 200,
                height: 200
            });
            
            // Guardar en localStorage como respaldo
            saveToLocalHistory({
                codigo: codigo,
                email: datos.email,
                nombre: datos.nombre,
                tipo: datos.tipoDoc,
                hash: datos.hashDoc,
                fecha: new Date().toLocaleString(),
                url: url,
                verificado: false
            });
            
            document.getElementById('results').classList.add('show');
            updateLocalHistory();
        }

        function showResult(type, html) {
            const resultDiv = document.getElementById('verificationResult');
            resultDiv.className = `verification-result ${type}`;
            resultDiv.innerHTML = html;
        }

        function generateUniqueCode() {
            const chars = 'ABCDEFGHJKLMNPQRSTUVWXYZ23456789';
            let result = '';
            for (let i = 0; i < 8; i++) {
                result += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            return result;
        }

        // ======================
        // VALIDACI√ìN DE EMAIL (igual que antes)
        // ======================
        function validateEmail() {
            // Tu c√≥digo de validaci√≥n original
            const emailInput = document.getElementById('agentEmail');
            const email = emailInput.value.trim();
            const messageDiv = document.getElementById('emailMessage');
            const btn = document.getElementById('generateBtn');
            
            if (!email) {
                messageDiv.textContent = '‚è≥ Ingrese su correo';
                btn.disabled = true;
                return false;
            }
            
            const emailLower = email.toLowerCase();
            const esValido = DOMINIOS_PERMITIDOS.some(dominio => 
                emailLower.endsWith(dominio)
            );
            
            if (esValido) {
                messageDiv.textContent = '‚úÖ Correo v√°lido';
                messageDiv.style.color = '#28a745';
                btn.disabled = false;
                return true;
            } else {
                messageDiv.textContent = '‚ùå Dominio no autorizado';
                messageDiv.style.color = '#dc3545';
                btn.disabled = true;
                return false;
            }
        }

        // ======================
        // FUNCIONES DE LOCALSTORAGE (backup)
        // ======================
        function saveToLocalHistory(data) {
            let historial = JSON.parse(localStorage.getItem('codigosQR') || '[]');
            historial.unshift(data);
            if (historial.length > 100) historial = historial.slice(0, 100);
            localStorage.setItem('codigosQR', JSON.stringify(historial));
        }

        function searchInLocalHistory(codigo) {
            const historial = JSON.parse(localStorage.getItem('codigosQR') || '[]');
            return historial.find(item => item.codigo === codigo);
        }

        function updateLocalVerification(codigo, verificado) {
            const historial = JSON.parse(localStorage.getItem('codigosQR') || '[]');
            const item = historial.find(item => item.codigo === codigo);
            if (item) {
                item.verificado = verificado;
                localStorage.setItem('codigosQR', JSON.stringify(historial));
                updateLocalHistory();
            }
        }

        function updateLocalHistory() {
            const historial = JSON.parse(localStorage.getItem('codigosQR') || '[]');
            const container = document.getElementById('localHistory');
            
            if (historial.length === 0) {
                container.innerHTML = '<p>No hay c√≥digos locales</p>';
                return;
            }
            
            let html = '';
            historial.slice(0, 10).forEach(item => {
                html += `
                    <div class="history-item">
                        <div>
                            <strong>${item.codigo}</strong><br>
                            <small>${item.email}</small>
                        </div>
                        <div>
                            <small>${item.fecha}</small><br>
                            <small>${item.verificado ? '‚úÖ' : '‚è≥'}</small>
                        </div>
                    </div>
                `;
            });
            container.innerHTML = html;
        }

        function displayHistoryFromLocal() {
            updateLocalHistory();
        }

        // ======================
        // INICIALIZACI√ìN
        // ======================
        document.addEventListener('DOMContentLoaded', function() {
            // Configurar validaci√≥n de email
            document.getElementById('agentEmail').addEventListener('input', validateEmail);
            
            // Cargar historial desde Supabase (o localStorage como fallback)
            loadHistoryFromSupabase();
            
            // Verificar c√≥digo en URL
            const urlParams = new URLSearchParams(window.location.search);
            const verifyCode = urlParams.get('verify');
            if (verifyCode) {
                document.getElementById('verifyCode').value = verifyCode;
                setTimeout(verifyCode, 500);
            }
        });

        // Funciones de utilidad (copy, download, etc.)
        function copyToClipboard(elementId) {
            const text = document.getElementById(elementId).textContent;
            navigator.clipboard.writeText(text).then(() => alert('‚úÖ Copiado'));
        }

        function copyCode(codigo) {
            navigator.clipboard.writeText(codigo).then(() => alert(`C√≥digo ${codigo} copiado`));
        }

        function downloadQR() {
            const qrCanvas = document.querySelector('#qrCode canvas');
            if (qrCanvas) {
                const link = document.createElement('a');
                link.download = `QR_${document.getElementById('uniqueCode').textContent}.png`;
                link.href = qrCanvas.toDataURL();
                link.click();
            }
        }
    </script>
</body>
</html>
